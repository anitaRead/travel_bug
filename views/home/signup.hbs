
<div class="d-flex justify-content-center mt-4">
  <div class="form-style shadow p-5 rounded card">
    <form id='sign-up-form' action='/sessions/newUser' method='post'>
      <input type='text' name='username' placeholder='username' class='mt-3 p-2' required>
      <input type='email' name='email' placeholder='email' class='mt-3 p-2' required>
      <input type='password' name='password' placeholder='password' class='mt-3 p-2' required>
      <input type='submit' value='Submit' class='btn btn-outline-danger mt-4'>
    </form>
  </div>

  <form action="/sessions/end" method="post">
    <button class="btn btn-outline-danger btn-sm mx-4" type="submit" id="sign-out-button"><b>Sign out</b></button>
  </form>

</div>
